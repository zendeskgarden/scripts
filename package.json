{
  "name": "@zendeskgarden/scripts",
  "version": "1.3.0",
  "description": "Garden Scripts",
  "license": "Apache-2.0",
  "author": "Zendesk Garden <garden@zendesk.com>",
  "homepage": "https://garden.zendesk.com/",
  "repository": "https://github.com/zendeskgarden/scripts",
  "bugs": {
    "url": "https://github.com/zendeskgarden/scripts/issues"
  },
  "main": "dist/index.js",
  "bin": {
    "garden": "bin/index.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "yarn tsc",
    "format": "prettier-package-json --write && yarn format:all --write",
    "format:all": "prettier --loglevel warn '**/*.{js,ts,json,md}' '!CHANGELOG.md' '!dist/**' '!.github/ISSUE_TEMPLATE.md'",
    "lint": "yarn lint:js && yarn lint:md",
    "lint:js": "eslint bin/ src/ --ext js,ts --max-warnings 0",
    "lint:md": "markdownlint README.md src/**/*.md",
    "prepare": "husky install && yarn build",
    "start": "bin/index.js",
    "tag": "[ `git rev-parse --abbrev-ref HEAD` = 'main' ] && standard-version --no-verify",
    "test": "prettier-package-json --list-different && yarn format:all --check && yarn lint && yarn start --version",
    "watch": "yarn build --watch"
  },
  "dependencies": {
    "@octokit/request-error": "2.1.0",
    "@octokit/rest": "18.12.0",
    "chalk": "4.1.2",
    "commander": "8.3.0",
    "comment-parser": "1.2.4",
    "dotenv": "10.0.0",
    "execa": "5.1.1",
    "figlet": "1.5.2",
    "fs-extra": "10.0.0",
    "gh-pages": "3.2.3",
    "globby": "11.0.4",
    "handlebars": "4.7.7",
    "handlebars-helpers": "0.10.0",
    "is-interactive": "1.0.0",
    "klaw": "4.0.1",
    "lerna-changelog": "2.2.0",
    "lodash": "4.17.21",
    "netlify": "8.0.4",
    "netlify-cli": "6.14.25",
    "node-fetch": "2.6.6",
    "ora": "5.4.1",
    "pluralize": "8.0.0",
    "react-docgen-typescript": "2.1.1",
    "typescript": "4.4.4"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.16.3",
    "@types/figlet": "1.5.4",
    "@types/fs-extra": "9.0.13",
    "@types/gh-pages": "3.2.0",
    "@types/handlebars-helpers": "0.5.3",
    "@types/klaw": "3.0.3",
    "@types/lodash": "4.14.177",
    "@types/node": "16.11.7",
    "@types/pluralize": "0.0.29",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "@zendeskgarden/eslint-config": "25.0.0",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-notice": "0.9.10",
    "husky": "7.0.4",
    "markdownlint-cli": "0.29.0",
    "prettier": "2.4.1",
    "prettier-package-json": "2.6.0",
    "standard-version": "9.3.2"
  },
  "keywords": [
    "cli",
    "garden",
    "tools",
    "zendesk"
  ],
  "publishConfig": {
    "access": "public"
  }
}
