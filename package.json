{
  "name": "@zendeskgarden/scripts",
  "version": "1.0.0",
  "description": "Garden Scripts",
  "license": "Apache-2.0",
  "author": "Zendesk Garden <garden@zendesk.com>",
  "homepage": "https://garden.zendesk.com/",
  "repository": "https://github.com/zendeskgarden/scripts",
  "bugs": {
    "url": "https://github.com/zendeskgarden/scripts/issues"
  },
  "main": "dist/index.js",
  "bin": {
    "garden": "bin/index.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "yarn tsc",
    "format": "prettier-package-json --write && yarn format:all --write",
    "format:all": "prettier --loglevel warn '**/*.{js,ts,json,md}' '!CHANGELOG.md' '!dist/**' '!.github/ISSUE_TEMPLATE.md'",
    "lint": "yarn lint:js && yarn lint:md",
    "lint:js": "eslint bin/ src/ --ext js,ts --max-warnings 0",
    "lint:md": "markdownlint README.md src/**/*.md",
    "prepare": "husky install && yarn build",
    "start": "bin/index.js",
    "tag": "[ `git rev-parse --abbrev-ref HEAD` = 'main' ] && standard-version --no-verify",
    "test": "prettier-package-json --list-different && yarn format:all --check && yarn lint && yarn start --version",
    "watch": "yarn build --watch"
  },
  "dependencies": {
    "@octokit/rest": "18.9.1",
    "chalk": "4.1.2",
    "commander": "7.2.0",
    "dotenv": "10.0.0",
    "execa": "5.1.1",
    "figlet": "1.5.2",
    "fs-extra": "10.0.0",
    "gh-pages": "3.2.3",
    "handlebars": "4.7.7",
    "handlebars-helpers": "0.10.0",
    "is-interactive": "1.0.0",
    "klaw": "3.0.0",
    "lerna-changelog": "2.1.0",
    "lodash": "4.17.21",
    "netlify-cli": "6.5.1",
    "ora": "5.4.1"
  },
  "devDependencies": {
    "@types/figlet": "1.5.4",
    "@types/fs-extra": "9.0.12",
    "@types/gh-pages": "3.2.0",
    "@types/handlebars-helpers": "0.5.3",
    "@types/klaw": "3.0.2",
    "@types/lodash": "4.14.172",
    "@types/node": "14.17.9",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "@zendeskgarden/eslint-config": "20.0.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-notice": "0.9.10",
    "husky": "7.0.1",
    "markdownlint-cli": "0.28.1",
    "prettier": "2.3.2",
    "prettier-package-json": "2.6.0",
    "standard-version": "9.3.1",
    "typescript": "4.3.5"
  },
  "keywords": [
    "cli",
    "garden",
    "tools",
    "zendesk"
  ],
  "publishConfig": {
    "access": "public"
  }
}
